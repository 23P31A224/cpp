#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;
    while (T--) {
        int N;
        cin >> N;
        long long sum = 0;
        for (int i = 0; i < N; i++) {
            int x;
            cin >> x;
            sum += x;
        }

        if (sum >= 0) {
            cout << 0 << "\n";
        } else {
            // ceil(-sum / N)
            long long X = (-sum + N - 1) / N;
            cout << X << "\n";
        }
    }

    return 0;
}
