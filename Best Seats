#include <iostream>
#include <vector>
using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int N;
        cin >> N;

        vector<int> A(N);
        for (int i = 0; i < N; i++) {
            cin >> A[i];
        }

        int ans = A[0] + A[1];  // first pair

        for (int i = 1; i < N - 1; i++) {
            ans = min(ans, A[i] + A[i + 1]);
        }

        cout << ans << endl;
    }

    return 0;
}
