#include <bits/stdc++.h>
using namespace std;

int main() {
	
    int X;
    cin>>X;
    if(X==1){
        cout<<8000;
    }
    else if(X==2){
        cout<<4000;
    }
    else if(X==3){
        cout<<2000;
    }
    else if(X==4){
        cout<<1000;
    }
else{
    cout<<"Invalid";
}
    return 0;
}
