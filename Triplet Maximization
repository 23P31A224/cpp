#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin>>t;
    while(t--)
    {
        int x,y,ans;
        cin>>x>>y;
        int a = (x+y)/3;
        
        if(x<=y)
            ans = a*2;
        else
            ans = min(a*2, a+y);
        cout<<ans<<endl;
    }
}
